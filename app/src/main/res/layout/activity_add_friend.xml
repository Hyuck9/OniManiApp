<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.AddFriendActivity">

    <LinearLayout
        android:id="@+id/add_friend_a_search_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:background="@drawable/dialog_background"
        android:elevation="@dimen/elv_floating_action_button"
        android:orientation="vertical"
        android:padding="32dp"
        android:paddingTop="48dp"
        android:clipChildren="false"
        android:transitionName="@string/transition_name_add_friend">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="1dp"
            android:layout_marginBottom="20dp">
            <ImageView
                android:src="@drawable/ic_search_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/add_friend_a_tv_dialog_title"
                android:layout_height="wrap_content"
                android:text=" 친구 e-mail 주소 입력"
                style="@style/TextAppearance.AppCompat.Title" />
        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:paddingStart="1dp"
            android:paddingEnd="1dp"
            android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:id="@+id/add_friend_a_input_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="e-mail 주소 입력"
                android:selectAllOnFocus="true" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/add_friend_a_btn_find"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="find"
            android:theme="@style/PrimaryButton"/>

    </LinearLayout>

</FrameLayout>